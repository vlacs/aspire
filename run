#!/bin/bash
# Run the Aspire app with typical args for test/dev

[[ -z $1 ]] && profile="dev" || profile=$1

# How to run the uberjar:
# java -cp target/aspire-0.1.0-SNAPSHOT-standalone.jar clojure.main -m aspire.core

mydir=~/.aspire/
shift
case $profile in
    dev) lein run --config-path $mydir $*
        ;;
    prod) echo 'Not yet! Are you crazy?'
        ;;
    *) echo 'run saith: I did not understand what you wanted me to do.';
        ;;
esac
